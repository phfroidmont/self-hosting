---
apiVersion: apps/v1
kind: Deployment
metadata:
  name: searx
spec:
  replicas: 2
  selector:
    matchLabels:
      app: searx
  template:
    metadata:
      labels:
        app: searx
    spec:
      containers:
        - name: searx
          image: wonderfall/searx:latest
          imagePullPolicy: IfNotPresent
          ports:
            - containerPort: 8888
          livenessProbe:
            httpGet:
              path: /
              port: 8888
          readinessProbe:
            httpGet:
              path: /
              port: 8888
